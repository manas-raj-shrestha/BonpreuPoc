<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:id="@+id/bottom_sheet_amount_pay"
    app:behavior_hideable="true"
    android:paddingBottom="36dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <ImageView
        android:id="@+id/iv_bank_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_payment_choice"
        android:layout_width="52dp"
        android:layout_height="52dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="64dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:text="BBVA"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_bank_icon"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_description"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="64dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:text="Es carregarà al compte indicat un total a favor de Retailer de"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_amount"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="64dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:text="16 €"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_manage_banks"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="64dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:text="Gestionar bancs vinculats"
        android:drawableEnd="@drawable/ic_chevron_right"
        android:textColor="#1D5532"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_amount"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_manage_banks"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>

    <ImageView
        android:id="@+id/iv_authorize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_line"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_authorize"
        android:layout_width="52dp"
        android:layout_height="52dp"/>
    <TextView
        android:id="@+id/tv_auth"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="64dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:text="Autoritzar pagament "
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_authorize"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>