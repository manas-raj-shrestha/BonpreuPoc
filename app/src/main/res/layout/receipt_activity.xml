<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
<!--        app:layout_constraintTop_toBottomOf="@id/toolbar"-->

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:layout_marginTop="52dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:id="@+id/iv_dinube_logo"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_legal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_dinube_logo"
                android:layout_marginTop="16dp"
                android:src="@drawable/legal_stuff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="VENDA"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/iv_legal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:id="@+id/tv_venda"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Target Client :"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_venda"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/tv_target_client_number"
                android:layout_width="wrap_content"
                android:id="@+id/tv_target_client"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="92124893435664"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_venda"
                app:layout_constraintLeft_toLeftOf="@id/tv_target_client"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:id="@+id/tv_target_client_number"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Total :"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_target_client"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/tv_total_number"
                android:layout_width="wrap_content"
                android:id="@+id/tv_total"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="16 €"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_target_client"
                app:layout_constraintLeft_toLeftOf="@id/tv_total"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:id="@+id/tv_total_number"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="PER AL TITULAR"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_total"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:id="@+id/tv_for_owner"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Sub total"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_for_owner"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/tv_sub_total_number"
                android:layout_width="wrap_content"
                android:id="@+id/tv_sub_total"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="10 €"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_for_owner"
                app:layout_constraintLeft_toLeftOf="@id/tv_sub_total"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:id="@+id/tv_sub_total_number"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="càrrec"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_sub_total"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/tv_charge_number"
                android:layout_width="wrap_content"
                android:id="@+id/tv_charge"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="6 €"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_sub_total"
                app:layout_constraintLeft_toLeftOf="@id/tv_charge"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:id="@+id/tv_charge_number"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Total :"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_charge"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/tv_grand_total_number"
                android:layout_width="wrap_content"
                android:id="@+id/tv_grand_total"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="16 €"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_charge"
                app:layout_constraintLeft_toLeftOf="@id/tv_grand_total"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:id="@+id/tv_grand_total_number"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Nùmero d'autorització: 246874573874576"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@id/tv_grand_total"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:id="@+id/tv_authorization_number"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="ATES PER:"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@id/tv_authorization_number"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/tv_attended_by_name"
                android:layout_width="wrap_content"
                android:id="@+id/tv_attended_by"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="(0036) Humbert A."
                android:textStyle="bold"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@id/tv_authorization_number"
                app:layout_constraintLeft_toLeftOf="@id/tv_attended_by"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:id="@+id/tv_attended_by_name"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Fra Simplificada:"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_attended_by"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/tv_simplified_number"
                android:layout_width="wrap_content"
                android:id="@+id/tv_simplified"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="0088"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_attended_by"
                app:layout_constraintLeft_toLeftOf="@id/tv_simplified"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:id="@+id/tv_simplified_number"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Data: "
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_simplified"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/tv_date_number"
                android:layout_width="wrap_content"
                android:id="@+id/tv_date"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="14 / 02 / 2020"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_simplified"
                app:layout_constraintLeft_toLeftOf="@id/tv_date"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:id="@+id/tv_date_number"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Establiment 00114 TPV 001"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_date"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:id="@+id/tv_establishment"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_end"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_establishment"
                android:layout_marginTop="32dp"
                android:src="@drawable/receipt_end_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>




</androidx.coordinatorlayout.widget.CoordinatorLayout>